@import '../dist/app.wxss';
page{
  background-color: #FFF;
}
.create-view{
  margin: 20rpx;
  display: flex;
  justify-content: center;
}
.create-image{
  width: 96%;
  min-height: 200rpx;
}

.create_content{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
}

.create_content_select{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.create_content_select_input{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
}

.create_content_select_item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100%;
  padding-top: 4rpx;
}

.create_content_select_item label{
  display: block;
  width: 92%;
  height: 100%;
  font-size: 36rpx;
  margin-left: 6rpx;
  align-self: center;
}

.create_content_select_item image{
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.create_button{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 30rpx;
}

.text_input {
    transition: all 0.30s ease-in-out;
    -webkit-transition: all 0.30s ease-in-out;
    -moz-transition: all 0.30s ease-in-out;
    border: #dbdbdb 1px solid;
    border-radius: 3px;
    outline: none;
    width: 90%;
    margin-top: 16rpx;
    padding-left: 16rpx;
    min-height: 72rpx;
    line-height: 72rpx;
    align-self: center;
}
.select_bg {
    transition: all 0.30s ease-in-out;
    -webkit-transition: all 0.30s ease-in-out;
    -moz-transition: all 0.30s ease-in-out;
    border: #f8f8f8 1px solid;
    border-radius: 3px;
    outline: none;
    width: 90%;
    margin-top: 16rpx;
    padding-left: 16rpx;
    min-height: 72rpx;
    align-self: center;
    line-height: 72rpx;
}

.create_select_img_item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  width: 100%;
  height: 100rpx;
}

.create_add_img{
  display: flex;
  flex-direction: row;
  width: 92%;
  margin-top: 14rpx;
  justify-content: center
}
.create_add_img label{
  display: block;
  width: 90%;
  height: 100%;
  font-size: 36rpx;
  margin-left: 6rpx;
  align-self: center;
}

.create_add_img image{
  display: block;
  width: 100rpx;
  height: 100rpx;
}

.bottom-user{
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.user-remark{
  font-size: 10px;
  color: #dddddd
}